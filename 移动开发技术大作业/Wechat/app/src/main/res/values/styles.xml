<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="item_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="item_meta">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="detail_title_bar_style">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.0dip</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="deail_title_text_style" parent="@style/title_text_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">23.0sp</item>
    </style>
    <style name="deail_file_text_style" parent="@style/title_text_style">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="Bottom_Tab_Style" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_tab_selector</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
